<header id="page-title" class="jumbotron background">
<div id="title-image" class="bg">
	<img {{bind-attr src=postContent.image}} alt="">
</div>
<div class="container">
	<div class="horizontal-center vertical-center">
		<h1 class="article-title">{{postContent.title}}</h1>
		{{#if postContent.subtitle}}
			<h2 class="article-subtitle">{{postContent.subtitle}}</h2>
		{{/if}}
	</div>
</div>
</header>

<div class="container foreground">
	<div class="row">
		<div class="col-lg-12">
			<div class="bs-component">
				<article>
				{{{postContent.content}}}
				<div class="horizontal-center">
					<div class="author">
						<a href="#">
							{{#if postContent.author.profileImageUrl}}<img {{bind-attr src="postContent.author.profileImageUrl"}} class="author-image">{{/if}}<span class="author-name">{{postContent.author.name}}</span>
						</a>
				</div>
				<div class="date-published">
					{{postContent.datePublished}}
				</div>
			</div>
		</article>
			</div>

