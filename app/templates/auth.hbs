{{log username}}
{{#if loggedIn}} {{! Display user name and logout button}}
	<h1>Hello {{username}}</h1>
	<button type="button" class="btn btn-default" {{action 'logout'}}><i class="fa fa-sign-out"></i>Sign out</button>
{{else}} {{!Display login page}}
{{#if errorMsg}}
	<form>
		
		<div class="form-group has-error">
			<label class="control-label"><div class="alert alert-danger" style="padding: 5px; margin-bottom: 0px;" role="alert">{{errorMsg}}</div></label>
			{{input class="form-control" value=username action="login" placeholder="Username"}}
		</div>
		<div class="form-group has-error">
			{{input class="form-control" value=password action="login" placeholder="Password" type="password"}}
		</div>
		<label class="checkbox">
		  {{input type="checkbox" checked=remember}} Remember me
		</label>
		<button type="button" class="btn btn-default" {{action 'login'}}><i class="fa fa-sign-in"></i>Log in</button>
		{{!errorMsg}}

	</form>

{{else}}
	<form>
		<div class="form-group">
			{{input class="form-control" value=username action="login" placeholder="Username"}}
		</div>
		<div class="form-group">
			{{input class="form-control" value=password action="login" placeholder="Password" type="password"}}
		</div>
		<label class="checkbox">
		  {{input type="checkbox" checked=remember}} Remember me
		</label>
		<button type="button" class="btn btn-default" {{action 'login'}}><i class="fa fa-sign-in"></i>Log in</button>
	</form>
	{{/if}}
{{/if}}