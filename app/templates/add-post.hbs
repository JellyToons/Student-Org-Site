<form {{action 'addPost' on='submit'}}>
  <div class="form-group">
    <label>Title of Post</label>
    {{input value=title placeholder='Title' class='form-control'}}
  </div>
  <div class="form-group">
    <label>Subtitle</label>
    {{input value=subtitle placeholder='Subtitle' class='form-control'}}
  </div>
  <div class="form-group">
    <label>Upload an Image</label>
    {{input value=image placeholder='Paste image URL here' class='form-control'}}
  </div>
  <div class="form-group">
    <label>Content</label>
    {{input value=content2 placeholder='Content' class='form-control'}}
  </div>
  <div class="form-group">
    <label style="padding-right:20px;vertical-align:top;">Tags</label>
    {{view "select" value=tags class='form-control' multiple=true content=model.tags optionValuePath="content.name" optionLabelPath="content.name" selection="selectedTags"}}
  </div>
  <button type="submit" class="btn btn-default">Create Post</button>
</form>
